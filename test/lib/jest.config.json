{
  "testEnvironment": "jsdom",
  "clearMocks": true,
  "coverageDirectory": "<rootDir>/../../test/lib/coverage",
  "displayName": "lib",
  "restoreMocks": true,
  "//": "In the future, tests should live in the same directory as the files they are testing",
  "rootDir": "../../src/lib",
  "roots": [
    "<rootDir>",
    "<rootDir>/../../test/lib"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/../../test/lib/unit/global.js"
  ],
  "testMatch": [
    "**/unit/**/*.js",
    "!**/global.js"
  ]
}
