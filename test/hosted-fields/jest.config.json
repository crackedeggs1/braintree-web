{
  "testEnvironment": "jsdom",
  "clearMocks": true,
  "coverageDirectory": "<rootDir>/../../test/hosted-fields/coverage",
  "displayName": "hosted-fields",
  "restoreMocks": true,
  "//": "In the future, tests should live in the same directory as the files they are testing",
  "rootDir": "../../src/hosted-fields",
  "roots": [
    "<rootDir>",
    "<rootDir>/../../test/hosted-fields"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/../../test/hosted-fields/unit/global.js"
  ],
  "testMatch": [
    "**/unit/**/*.js",
    "!**/helpers/*.js",
    "!**/global.js"
  ]
}
